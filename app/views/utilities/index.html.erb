<h1>Listing utilities</h1>

<table>
  <thead>
    <tr>
      <th>Controller</th>
      <th>T</th>
      <th>A</th>
      <th>Action</th>
      <th>Html safe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utilities.each do |utility| %>
      <tr>
        <td><%= utility.controller %></td>
        <td><%= utility.t %></td>
        <td><%= utility.a %></td>
        <td><%= utility.action %></td>
        <td><%= utility.html_safe %></td>
        <td><%= link_to 'Show', utility %></td>
        <td><%= link_to 'Edit', edit_utility_path(utility) %></td>
        <td><%= link_to 'Destroy', utility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Utility', new_utility_path %>
